<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">






        <ImageView
            android:id="@+id/bottomImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/citybottom" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/device" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageView3"
            android:text="@string/register"
            android:fontFamily="@font/lato_bold"
            android:textColor="#843434"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"


            />



        <LinearLayout
            style="@style/linearStyle"
            android:id="@+id/linear2"
            android:layout_width="352dp"
            android:layout_height="wrap_content"


            android:layout_below="@id/register"
            android:orientation="vertical">


            <TextView

                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto"
                android:inputType="phone|number"
                android:text="Номер телефона"


                android:textSize="13dp" />

            <EditText
                android:background="@drawable/spinner_border"
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAlignment="inherit"
                android:inputType="text"
                android:hint="+7" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear3"
            style="@style/linearStyle"
            android:layout_width="352dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/linear2"
            android:orientation="vertical">


            <TextView

                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto"

                android:text="ВОЗРАСТ"


                android:textSize="13dp" />

            <EditText
                android:background="@drawable/spinner_border"
                android:id="@+id/ageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAlignment="inherit"
                android:inputType="text"
                android:hint="Напишите свой возраст" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear4"
            style="@style/linearStyle"
            android:layout_width="352dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/linear3"
            android:orientation="vertical">


            <TextView

                android:id="@+id/university"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto"

                android:text="УНИВЕРСИТЕТ"


                android:textSize="13dp" />

            <EditText
                android:background="@drawable/spinner_border"
                android:id="@+id/universityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAlignment="inherit"
                android:inputType="textPassword"
                android:hint="Напишите свой университет" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear5"
            style="@style/linearStyle"
            android:layout_height="wrap_content"

            android:layout_below="@id/linear4"
            android:layout_width="352dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto"

                android:text="СТЕПЕНЬ"


                android:textSize="13dp" />

            <Spinner
                android:background="@drawable/spinner_border"
                android:id="@+id/degreeSpinner"

                android:layout_height="wrap_content"
                android:popupBackground="#FFFFFF"

                android:layout_width="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear6"
            style="@style/linearStyle"
            android:layout_width="352dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/linear5"
            android:orientation="vertical">


            <TextView

                android:id="@+id/course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto"

                android:text="КУРС"


                android:textSize="13dp" />

            <EditText
                android:background="@drawable/spinner_border"
                android:id="@+id/courseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAlignment="inherit"
                android:inputType="textPassword"
                android:hint="Напишите свой курс" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear7"
            style="@style/linearStyle"
            android:layout_width="352dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/linear6"
            android:orientation="vertical">


            <TextView

                android:id="@+id/idCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto"

                android:text="Студенческая id-Карта"


                android:textSize="13dp" />

            <EditText
                android:background="@drawable/spinner_border"
                android:id="@+id/idCardFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textAlignment="inherit"
                android:inputType="textPassword"
                android:hint="Загрузите свою карту" />

        </LinearLayout>

        <Button
            android:layout_width="277dp"
            android:layout_height="44dp"
            android:text="Дальше"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/lato_bold"
            android:background="@color/primaryColor"
            android:shadowColor="@color/primaryColor"
            android:textColorHint="@color/primaryColor"
            android:layout_below="@id/linear7"
            />






    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>